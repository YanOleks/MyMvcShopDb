@using MyMvcShopDb.Core.Models
@model Product
@{
    ViewData["Title"] = Model.Name;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <title>@ViewData["Title"]</title>

    <meta name="description" content="Get the best deal on the @Model.Name from @Model.Manufacturer!.Name. Only @Model.Price.ToString("C")! Click to learn more and buy today." />

    <link rel="canonical" href="https://www.my-future-shop.com/Products/Details/@Model.Id" />

    <meta property="og:title" content="@ViewData["Title"]" />
    <meta property="og:description" content="Get the best deal on the @Model.Name..." />
    <meta property="og:image" content="@Model.ImageUrl" />
    <meta property="og:type" content="website" />

    <link rel="stylesheet" href="https.../bootstrap.min.css" />
</head>
<body data-bs-spy="scroll" data-bs-target="#navSections" style="padding-top: 56px;">

    @await Html.PartialAsync("_LandingNavbar", Model)

    @await Html.PartialAsync("_LandingHero", Model)
    @await Html.PartialAsync("_LandingFeatures", Model)


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>