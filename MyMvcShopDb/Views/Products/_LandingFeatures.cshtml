@using MyMvcShopDb.Core.Models
@model Product

<section id="features" class="container my-5 pt-4">
    <h2 class="text-center mb-4">Details</h2>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <ul class="list-group list-group-flush shadow-sm">
                <li class="list-group-item d-flex justify-content-between align-items-center fs-5">
                    Price
                    <span class="badge bg-primary rounded-pill">@Model.Price.ToString("C")</span>
                </li>
                <li class="list-group-item fs-5">
                    <strong>Manufacturer:</strong> @Model.Manufacturer!.Name
                </li>
                <li class="list-group-item fs-5">
                    <strong>Category:</strong> @Model.Category!.Name
                </li>
            </ul>
        </div>
    </div>
</section>
<hr />